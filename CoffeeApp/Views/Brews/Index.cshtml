@model List<CoffeeApp.Models.Brew>

<div class="row">
    <div class="col">
        <h2>Brews Index</h2>
    </div>
    <div class="col">
        <a class="btn btn-primary" asp-area="" asp-controller="Brews" asp-action="Create">New Brew</a>
    </div>
</div>
    

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Coffee Origin</th>
            <th>Brewing Method</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brew in Model)
        {
            <tr>
                <td>@brew.Id</td>
                <td>@brew.CoffeeOrigin</td>
                <td>@brew.BrewType</td> <!-- Assuming BrewType is an enum -->
                <td>
                    <a class="btn btn-link" asp-area="" asp-controller="Brews" asp-action="Edit" asp-route-id="@brew.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>